<section class="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="section-apps">
 
  

  {%- for block in section.blocks -%}
    {% render block %}
  {%- endfor -%}
  


</section>
<style>
  .section--{{ section.id }} #bundle-product-bundles{
    background-color:{{ section.settings.bg_color }};
    padding: 50px 0px;
  }
</style>
{% schema %}
{
  "name": "Apps",
  "tag": "section",
  "class": "js-section__apps",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "Match section width to theme width"
    },
{
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#F8F7FA"
        }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Apps"
    }
  ]
}
{% endschema %}