{% if section.blocks.size > 0 %}
<section class="section--{{ section.id }} section--full-bg" data-section-id="{{ section.id }}" data-section-type="home-promo">
    <div class="home-promo">
{% if section.settings.section_title != blank %}
            <div class="section__title">
                <h2 class="section__title-text">{{ section.settings.section_title | escape }}</h2>
            </div>
        {% endif %}
        {% for block in section.blocks %}
      {%- case block.type -%}
      {%- when 'list-style' -%}
      
        <div class="list-style home-promo__item {% if block.settings.bg_color_ls == '#ffffff' %} block--no-bg{% else %} block--has-bg{% endif %}" {{ block.shopify_attributes }}>
            <div class="home-promo__item-bg" style="background-color: {{ block.settings.bg_color_ls }}"></div>
            <div class="container container--mob-0 container--large">

                <div class="home-promo__content">
                    <div class="o-layout u-flex">
  <div class="o-layout__item u-1/1 u-1/2@desk">
                            <div class="home-promo__box{% if block.settings.link != blank %} home-promo__box--btn{% endif %}">
                                {% unless block.settings.title == blank %}
                                    <div class="home-promo__title section__title">
                                        <h3 class="section__title-text">{{ block.settings.title }}</h3>
                                    </div>
                                {% endunless %}
                              {% unless block.settings.desc_ls_1 == blank %}<li class="list-ls"><span class="check-mark-ls"><svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 10C0 4.47656 4.47656 0 10 0C15.5234 0 20 4.47656 20 10C20 15.5234 15.5234 20 10 20C4.47656 20 0 15.5234 0 10ZM14.5234 8.27344C14.9492 7.84766 14.9492 7.15234 14.5234 6.72656C14.0977 6.30078 13.4023 6.30078 12.9766 6.72656L8.75 10.9531L7.02344 9.22656C6.59766 8.80078 5.90234 8.80078 5.47656 9.22656C5.05078 9.65234 5.05078 10.3477 5.47656 10.7734L7.97656 13.2734C8.40234 13.6992 9.09766 13.6992 9.52344 13.2734L14.5234 8.27344Z" fill="black"/></svg></span><p>{{block.settings.desc_ls_1}}</p></li>{% endunless %}
                              {% unless block.settings.desc_ls_2 == blank %}<li class="list-ls"><span class="check-mark-ls"><svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 10C0 4.47656 4.47656 0 10 0C15.5234 0 20 4.47656 20 10C20 15.5234 15.5234 20 10 20C4.47656 20 0 15.5234 0 10ZM14.5234 8.27344C14.9492 7.84766 14.9492 7.15234 14.5234 6.72656C14.0977 6.30078 13.4023 6.30078 12.9766 6.72656L8.75 10.9531L7.02344 9.22656C6.59766 8.80078 5.90234 8.80078 5.47656 9.22656C5.05078 9.65234 5.05078 10.3477 5.47656 10.7734L7.97656 13.2734C8.40234 13.6992 9.09766 13.6992 9.52344 13.2734L14.5234 8.27344Z" fill="black"/></svg></span><p>{{block.settings.desc_ls_2}}</p></li>{% endunless %}
                              {% unless block.settings.desc_ls_3 == blank %}<li class="list-ls"><span class="check-mark-ls"><svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 10C0 4.47656 4.47656 0 10 0C15.5234 0 20 4.47656 20 10C20 15.5234 15.5234 20 10 20C4.47656 20 0 15.5234 0 10ZM14.5234 8.27344C14.9492 7.84766 14.9492 7.15234 14.5234 6.72656C14.0977 6.30078 13.4023 6.30078 12.9766 6.72656L8.75 10.9531L7.02344 9.22656C6.59766 8.80078 5.90234 8.80078 5.47656 9.22656C5.05078 9.65234 5.05078 10.3477 5.47656 10.7734L7.97656 13.2734C8.40234 13.6992 9.09766 13.6992 9.52344 13.2734L14.5234 8.27344Z" fill="black"/></svg></span><p>{{block.settings.desc_ls_3}}</p></li>{% endunless %}
                                
                            </div>
                        </div>

                        <div class="o-layout__item u-1/1 u-1/2@desk">
                            <div class="home-promo__media dev-media">
                                {% unless block.settings.image == blank %}
                                    {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

                                    <div class="o-ratio o-ratio--custom" style="padding-bottom:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                                        <div class="o-ratio__content img-lazyload-cover">
                                            <img
                                                class="home-promo__media-img"
                                                src="{{ block.settings.image | img_url: '300x' }}"
                                                srcset="{% render 'bgset', image: block.settings.image %}"
                                                width="300"
                                                height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                                                alt="{{ block.settings.image.alt}}"
                                                loading="lazy"
                                            />
                                        </div>
                                    </div>

                                {% else %}
                                    {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                {% endunless %}
                               
                            </div>
                        </div>
                      
                    </div>
                </div>

            </div>
        </div>
    
      {%- when 'both-text' -%}
          <div class="both-text home-promo__item {% if block.settings.bg_color_bt == '#ffffff' %} block--no-bg{% else %} block--has-bg{% endif %}" {{ block.shopify_attributes }}>
            <div class="home-promo__item-bg" style="background-color: {{ block.settings.bg_color }}"></div>
            <div class="container container--mob-0 container--large">

                <div class="home-promo__content">
                    <div class="o-layout u-flex">
 <div class="o-layout__item u-1/1 u-1/2@desk">
                            <div class="home-promo__box{% if block.settings.link != blank %} home-promo__box--btn{% endif %}">
                              <div class="home-promo__box-text-dev home-promo__box-inner"> 
                              {% unless block.settings.title == blank %}
                                    <div class="home-promo__title section__title">
                                        <h3 class="section__title-text">{{ block.settings.title}}</h3>
                                    </div>
                                {% endunless %}
                                {% unless block.settings.desc == blank %}
                                    <div class="home-promo__text rte">{{ block.settings.desc }}</div>
                                {% endunless %}
                              </div>
                             <div class="home-promo__box-image-dev home-promo__box-inner">
                              <img
                                                class="home-promo__media-img"
                                                src="{{ block.settings.image_sm1 | img_url: '300x' }}"
                                                srcset="{% render 'bgset', image: block.settings.image_sm1 %}"
                                                width="300"
                                                height="{{ 300 | divided_by: block.settings.image.aspect_ratio_sm1 | round }}"
                                                alt="{{ block.settings.image.alt_sm1 }}"
                                                loading="lazy"
                                            />
                              </div>
                            </div>
                           <div class="second-text-block home-promo__box{% if block.settings.link_2 != blank %} home-promo__box--btn{% endif %}">
                             <div class="home-promo__box-text-dev home-promo__box-inner">   
                             {% unless block.settings.title_2 == blank %}
                                    <div class="home-promo__title section__title">
                                        <h3 class="section__title-text">{{ block.settings.title_2 }}</h3>
                                    </div>
                                {% endunless %}
                                {% unless block.settings.desc_2 == blank %}
                                    <div class="home-promo__text rte">{{ block.settings.desc_2 }}</div>
                                {% endunless %}
                             </div>
                             <div class="home-promo__box-image-dev home-promo__box-inner">
                             <img
                                                class="home-promo__media-img"
                                                src="{{ block.settings.image_sm2 | img_url: '300x' }}"
                                                srcset="{% render 'bgset', image: block.settings.image_sm2 %}"
                                                width="300"
                                                height="{{ 300 | divided_by: block.settings.image.aspect_ratio_sm2 | round }}"
                                                alt="{{ block.settings.image.alt_sm2 }}"
                                                loading="lazy"
                                            />
                             </div>
                            </div>
                        </div>
                        <div class="o-layout__item u-1/1 u-1/2@desk">
                            <div class="home-promo__media dev-media">
                                {% unless block.settings.image == blank %}
                                    {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

                                    <div class="o-ratio o-ratio--custom" style="padding-bottom:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                                        <div class="o-ratio__content img-lazyload-cover">
                                            <img
                                                class="home-promo__media-img"
                                                src="{{ block.settings.image | img_url: '300x' }}"
                                                srcset="{% render 'bgset', image: block.settings.image %}"
                                                width="300"
                                                height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                                                alt="{{ block.settings.image.alt }}"
                                                loading="lazy"
                                            />
                                        </div>
                                    </div>

                                {% else %}
                                    {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                {% endunless %}
                              
                            </div>
                        </div>
                       

                    </div>
                </div>

            </div>
        </div>
    
      {%- when 'video-image-text' -%}
      
          <div class="video-image-text home-promo__item {% if block.settings.bg_color_vit == '#ffffff' %} block--no-bg{% else %} block--has-bg{% endif %}" {{ block.shopify_attributes }}>
            <div class="home-promo__item-bg" style="background-color: {{ block.settings.bg_color }}"></div>
           <div class="{{block.settings.cus_class}}">
            <div class="container container--mob-0 container--large">

                <div class="home-promo__content">
                    <div class="o-layout u-flex">

                        <div class="o-layout__item u-1/1 u-1/2@desk">
                            <div class="home-promo__media dev-media">
                                {% unless block.settings.image == blank %}
                                    {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

                                    <div class="o-ratio o-ratio--custom" style="padding-bottom:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                                        <div class="o-ratio__content img-lazyload-cover">
                                            <img
                                                class="home-promo__media-img"
                                                src="{{ block.settings.image | img_url: '300x' }}"
                                                srcset="{% render 'bgset', image: block.settings.image %}"
                                                width="300"
                                                height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                                                alt="{{ block.settings.image.alt }}"
                                                loading="lazy"
                                            />
                                        </div>
                                    </div>

                                {% else %}
                                    {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                {% endunless %}
                                {% unless block.settings.video == blank %}

                                    <div class="home-promo__media-video">
                                      <video class="home-promo__media-video__btn c-btn c-btn--primary c-btn--play icon-fallback js-no-transition js-pop-video"><source src="{{ block.settings.video_url }}" type="video/mp4" />
                                      <i class="icon icon--play" aria-hidden="true"></i>
                                            <span class="icon-fallback__text">{{ 'sections.video.play_label' | t }}</span>
                                      </video>
                                    </div>
                                {% endunless %}
                            </div>
                        </div>
                        <div class="o-layout__item u-1/1 u-1/2@desk">
                            <div class="home-promo__box{% if block.settings.link != blank %} home-promo__box--btn{% endif %}">
                                {% unless block.settings.title == blank %}
                                    <div class="home-promo__title section__title">
                                        <h3 class="section__title-text">{{ block.settings.title }}</h3>
                                    </div>
                                {% endunless %}
                                {% unless block.settings.desc == blank %}
                                    <div class="home-promo__text rte">{{ block.settings.desc }}</div>
                                {% endunless %}
                                {% unless block.settings.link == blank %}
                                    <a href="{{ block.settings.link }}" class="home-promo__btn c-btn c-btn--primary c-btn--arrow">{{ block.settings.link_title | escape }}</a>
                                {% endunless %}
                            </div>
                        </div>

                    </div>
                </div>

            </div>
       
            </div>
    
     

    </div>
    {%- endcase -%}  
      {% endfor %}
    
  </div>
            </section>
{% endif %}

{% if section.blocks.size == 0 %}
    <div class="placeholder-noblocks">
        {{ 'homepage.onboarding.no_content' | t }}
    </div>
{% endif %}
{% for block in section.blocks %}
<style>
  {% if block.settings.image_side != blank %}
 #{{ page_title | handle }} .{{block.settings.cus_class}}:after {
    content: ' ';
    position: absolute;
      background: url({{ block.settings.image_side | img_url: '600x' }});
    z-index: 5;
    background-size: contain;
    background-repeat: no-repeat;
     top: -{{ block.settings.image_side_top }}px;
    bottom: {{ block.settings.image_side_bottom }}%;
    left: {{ block.settings.image_side_left }}%;
    right: {{ block.settings.image_side_right }}%;
}
{% endif %}
</style>
   {% endfor %}
